    address router_,
    string calldata name_,
    bool allowed_
  ) external;

  function allowedDexCount() external view returns (uint16);

  function getDexDataById(
    uint16 id_
  ) external view returns (
    address router,
    bool allowed,
    string memory name
  );

  function getDexIdByRouter(
    address router_
  ) external view returns (uint16);
}
